<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer rectangle with rounded corners and red stroke -->
    <solid android:color="#FFFFFF"/> <!-- Background color inside the box -->

    <corners android:radius="20dp"/> <!-- Rounded corners -->

    <stroke
        android:width="2dp"
        android:color="#FF0000"/> <!-- Red outline -->

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
